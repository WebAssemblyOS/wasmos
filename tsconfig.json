{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": ["./types"],
    "types": ["assembly", "wasa", "as-pect"],
    "noLib": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": ["packages/*/assembly/**/*"],
  "exclude": ["**/assemblyscript/src", "packages/**/node_modules/**/*"]
}
